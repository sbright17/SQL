--display the database ordered by price
SELECT * FROM savannahshirts 
ORDER BY price desc;


--display the database ordered by color
SELECT * FROM savannahshirts 
ORDER BY color;

--display the database ordered by material
SELECT * FROM savannahshirts 
ORDER BY material;

--What is the total sale price of all items
SELECT SUM (price) from savannahshirts ;


